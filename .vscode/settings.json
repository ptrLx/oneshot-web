{
    "conventionalCommits.scopes": [
        "frontend",
        "doc",
        "api",
        "deploy"
    ],
    "cSpell.words": [
        "aiofiles",
        "devcontainer",
        "fastapi",
        "nginx",
        "oneshot",
        "pipenv"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
}